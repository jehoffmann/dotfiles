# User information. Replace with your own data, obviously.
[user]
	name = Jens Hoffmann
	email = jehoffma@gmail.com
[branch]
	autosetupmerge = true
	autosetuprebase = always
[push]
	default = current
[merge]
	summary = true
	tool = bc4
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = "red bold"
	oldHighlight = "red bold 52"
	newNormal = "green bold"
	newHighlight = "green bold 22"
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
	autocrlf = input
	editor = vim
	pager = diff-so-fancy | less -r
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	dc = diff --cached
	lol = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ls = ls-files
	remotes = !git remote -v |awk '{ if (NR % 2 ==0)  print $1\" \" $2}'
	conflicts = diff --name-only --diff-filter=U
[mergetool]
	keepBackup = true
	bc4 = trustExitCode
[diff]
	tool = bc4
[difftool "bc4"]
	cmd = bcompare \"$LOCAL\" \"$REMOTE\"
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[mergetool "bc4"]
	cmd = bcomp \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
	trustExitCode = true
[mergetool "cp"]
	cmd = /bin/cp -v \"$REMOTE\" \"$MERGED\"
	trustExitCode = true
[rerere]
	enabled = true
[pull]
	rebase = true
[reabse]
	autoSquash = true
[interactive]
	diffFilter = diff-so-fancy |less
